<div class="logo">
    <h1>Overtime app</h1>
</div>
<% if current_user %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light custom-nav">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="navbar-nav">
                <li class="nav-item <%= active?(root_path) %>">
                    <%= link_to "Home", root_path, class: 'nav-link' %> 
                </li>
                <li class="nav-item <%= active?(posts_path) %>">
                    <%= link_to "Track entries", posts_path, class: 'nav-link' %> 
                </li>
                <li class="nav-item <%= active?(new_post_path) %>">
                    <%= link_to "New entry", new_post_path, id: 'new_post_from_nav', class: 'nav-link' %> 
                </li>
            </ul>
            <ul class="navbar-nav ml-md-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown">Options</a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <% if current_user.try(:type) == 'AdminUser' %>
                            <%= link_to "Admin dashboard", admin_root_path, class: "dropdown-item"%>
                            <div class="dropdown-divider"></div>
                        <% end %>
                        <%= link_to  "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
<% end %>